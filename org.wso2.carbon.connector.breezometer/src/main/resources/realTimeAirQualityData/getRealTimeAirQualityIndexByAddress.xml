<template name="getRealTimeAirQualityIndexByAddress" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="location" description="The location address you wish to get air quality for."/>
    <!-- Optional Parameter -->
    <parameter name="lang" description="Response language. Support English(en) and Hebrew(he)"/>
    <sequence>
        <property name="uri.var.location" expression="$func:location"/>
        <property name="uri.var.lang" expression="$func:lang"/>
        <log level="custom">
            <property name="lang" expression="$ctx:uri.var.lang"/>
        </log>
        <script language="js">
            <![CDATA[
                var lang = mc.getProperty('uri.var.lang');
                var urlQuery = '';
                if (lang != null && lang != ""){
                   urlQuery  = urlQuery.concat('&lang=',lang) ;
                }
                mc.setProperty('uri.var.urlQuery',urlQuery);
            ]]>
        </script>
        <filter source="$ctx:breezoMeterBlocking" regex="true">
            <then>
                <call blocking="true">
                    <endpoint>
                        <http method="get"
                              uri-template="{uri.var.apiUrl}/baqi/?location={uri.var.location}&amp;key={+uri.var.apiKey}{+uri.var.urlQuery}"/>
                    </endpoint>
                </call>
            </then>
            <else>
                <call>
                    <endpoint>
                        <http method="get"
                              uri-template="{uri.var.apiUrl}/baqi/?location={uri.var.location}&amp;key={+uri.var.apiKey}{+uri.var.urlQuery}"/>
                    </endpoint>
                </call>
            </else>
        </filter>
    </sequence>
</template>